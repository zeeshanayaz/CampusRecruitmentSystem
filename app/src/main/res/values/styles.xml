<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ActionBarThemeOverlay">
        <item name="android:theme">@style/ActionBarThemeOverlay</item>
    </style>

    <style name="ActionBarPopupThemeOverlay">
        <item name="android:theme">@style/ActionBarPopupThemeOverlay</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/pacifico</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="splashScreenText">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="contentTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="headingTextStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NavigationStyle">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/pacifico</item>
    </style>


    <style name="spinner_style">
        <item name="android:background">@drawable/gradient_spinner</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
        <!--<item name="android:popupBackground">@color/transparent</item>-->
    </style>
</resources>
