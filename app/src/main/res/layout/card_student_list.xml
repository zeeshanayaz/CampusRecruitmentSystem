<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardStudentImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                tools:src="@drawable/userdefaultprofileimage"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <LinearLayout
                android:id="@+id/studentBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/cardStudentImage">
            <TextView
                    android:id="@+id/cardStudentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Student Name"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorPrimary"/>

            <TextView
                    android:id="@+id/cardStudentBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Bio"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorSecondaryText"/>
            <TextView
                    android:id="@+id/cardStudentCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:drawableStart="@drawable/ic_location"
                    tools:text="Karachi"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorSecondaryText"/>
        </LinearLayout>
        <Button
                android:id="@+id/cardDeleteStudentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                style="@style/ButtonStyle"
                android:background="@color/redColor"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_below="@id/studentBio"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>