<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
        <TextView
                android:id="@+id/cardJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Android Developer"
                android:textSize="18sp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorPrimary"/>
        <TextView
                android:id="@+id/cardJobCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Company Name"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                android:layout_alignParentStart="true"
                android:layout_below="@id/cardJobTitle"/>

        <LinearLayout
                android:id="@+id/otherDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/cardJobCompanyName"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:weightSum="3">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Type"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                <TextView
                        android:id="@+id/cardJobType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Full Time Job"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job Shift"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                <TextView
                        android:id="@+id/cardJobShift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Morning Job"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary"
                        android:textSize="16sp"
                        android:textColor="@color/colorSecondaryText"/>
                <TextView
                        android:id="@+id/cardJobSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0-0 Pkr"
                        android:textSize="16sp"
                        android:textColor="@color/colorPrimaryText"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:id="@+id/cardJobDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="GOVERNMENT OF SINDH, NATIONAL INSTITUTE OF CHILD HEALTH KARACHI-75510Neonatal Screening for Congenital Hypothyroidism (CH) in Sindh at NICH, Karachi Situation vacantHealth Department Government of Sindh invites app"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_alignParentStart="true"
                android:layout_below="@id/otherDescription"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentStart="true"
                android:gravity="center_vertical"
                android:layout_below="@id/cardJobDescription">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_location"/>
            <TextView
                    android:id="@+id/cardJobLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Karachi, Pakistan"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:layout_below="@id/cardJobDescription">
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calender"/>
            <TextView
                    android:id="@+id/cardJobDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Karachi, Pakistan"/>
        </LinearLayout>

        <ImageView
                android:id="@+id/cardDeleteJobBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:visibility="invisible"/>
        <Button
                android:id="@+id/cardJobWithdrawBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Withdraw"
                style="@style/ButtonStyle"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:layout_toStartOf="@+id/cardDeleteJobBtn"/>
        <Button
                android:id="@+id/cardJobApplyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                style="@style/ButtonStyle"
                android:background="@color/colorAccent"
                android:layout_alignParentTop="true"
                android:visibility="invisible"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>