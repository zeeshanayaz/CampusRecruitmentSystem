<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardCompanyImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/userdefaultprofileimage"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
        <TextView
                android:id="@+id/cardCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="XYZ Company"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/cardCompanyImage"
                android:textColor="@color/colorPrimary"/>

        <TextView
                android:id="@+id/cardCompanyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Karachi, Pakistan"
                android:textSize="14sp"
                android:textColor="@color/colorSecondaryText"
                android:layout_alignStart="@id/cardCompanyName"
                android:layout_below="@id/cardCompanyName"/>


        <ImageButton
                android:id="@+id/cardDeleteCompanyBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:background="@color/colorPrimary"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:padding="12dp"
                android:layout_marginStart="4dp"
                android:visibility="invisible"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>