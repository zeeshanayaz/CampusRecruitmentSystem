<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zeeshan.campusrecruitmentsystem">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name_short"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan">
        <activity
                android:name=".controller.splashScreen.SplashScreenActivity"
                android:noHistory="true"
                android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".controller.registration.RegistrationActivity"
                android:configChanges="orientation|screenSize">
        </activity>
        <activity
                android:name=".controller.dashboard.DashboardActivity"
                android:configChanges="orientation|screenSize">
        </activity>
        <activity
                android:name=".controller.profile.ProfileActivity"
                android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".controller.PMB.PMBActivity">
        </activity>
    </application>

</manifest>